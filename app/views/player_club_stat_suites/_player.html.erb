<% player = stat.player -%>

<table id="player_stat_table-<%= player.id %>" class="player_stat_table table_base" hidden>
  <tbody>
    <tr>
      <td colspan="3" style="border-right: 0px none white;">
        <%= player.full_name %>
      </td>
      <td align="right" style="border-left: 0px none white;">
        <span class="close" >x</span>
      </td>
    </tr>
    <% %i[drive_distance fairway_keeping].each do |category| -%>
      <tr class="club_name" data-club_name="Drive">
        <th colspan="2"><%= category.to_s.titleize %></th>
        <%= render partial: 'stat_with_rank', locals: {stat: stat, category: category} %>
      </tr>
    <% end -%>
    <% %i[fw li mi si p ch].each do |club_name| -%>
      <% club_name_display = club_name.to_s.send(club_name == :ch ? :titleize : :upcase) -%>
      <tr class="club_name" data-club_name="<%= club_name_display %>">
        <th rowspan="2"><%= club_name_display %></th>
        <% %i[green_hitting green_hitting_distance].each do |category| -%>
          <th><%= category.to_s.titleize.split.last %></th>
          <%= render partial: 'stat_with_rank', locals: {stat: stat, category: category, club_name: club_name} %>
          </tr>
          <tr class="club_name" data-club_name="<%= club_name %>">
        <% end -%>
      </tr>
    <% end -%>
    <% %i[putting_distance putting_in_from_20 putting_in_from_10 putting_in_from_5].each do |category| -%>
      <tr class="club_name" data-club_name="Putt">
        <th colspan="2"><%= category.to_s.titleize %></th>
        <%= render partial: 'stat_with_rank', locals: {stat: stat, category: category} %>
      </tr>
    <% end -%>
  </tbody>
</table>
