<%= form_tag cut_off_path, method: :patch do %>
  <table id="cut_offs" class="table_base">
    <% @players.each do |player| -%>
      <tr class="<%= player.tournament_score > @cut_off_score && 'cut' %> <%= cycle('odd', 'even') %>">
        <td><%= radio_button_tag :player_cut_off, player.id %></td>
        <td><%= player.full_name %></td>
        <td class="numeric"><%= score_formatted(player.tournament_score) %></td>
      </tr>
    <% end -%>
  </table>
  <br>
  <%= submit_tag :Cut %>
<% end -%>
