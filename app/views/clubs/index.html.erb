<% @clubs_by_name.each do |name, clubs| -%>
  <table class="clubs table_base">
    <caption><%= clubs.first %></caption>
    <tbody>
      <% clubs.first.dice_list.each_with_index do |dice, index| -%>
        <tr>
          <th><%= dice %></th>
          <% clubs.each do |club| -%>
            <td><%= club.result_values[index] %></td>
          <% end -%>
        </tr>
      <% end -%>
      <% clubs.first.stats.keys.each do |stat_name| -%>
        <tr>
          <th><%= stat_name_display(stat_name) %></th>
          <% clubs.each do |club| -%>
            <td class="numeric"><%= format('%4.1f', club.stats[stat_name]) %></td>
          <% end -%>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% end -%>
